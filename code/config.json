{
    "name": "PetPoc",
    "n_gpu": 4,
    "arch": {
        "type": "VisualBertFromBertBaseChinese",
        "args": {
            "bert_path": "../pretrain_model/model/bert-base-chinese",
            "vbert_path": "../pretrain_model/model/visualbert-nlvr2-coco-pre",
            "n_split": 4,
            "num_layer": 8
        }
    },
    "data_loader": {
        "type": "MyDataLoader",
        "args": {
            "raw_data_dir": "../contest_data/train",
            "tokenizer_path": "../pretrain_model/tokenizer/bert-base-chinese",
            "length": 1000,
            "run_jieba": true,
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0,
            "fold_idx": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 5e-5,
            "weight_decay": 1e-07
        }
    },
    "loss": "binary_loss",
    "metrics": [
        "attr_acc",
        "global_acc"
    ],
    "trainer": {
        "epochs": 1,
        "save_dir": "../save_dir/visual_rep_all//fold0",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": false
    }
}